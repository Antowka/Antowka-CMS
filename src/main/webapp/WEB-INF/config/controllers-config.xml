<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <!-- MainController -->
       <bean id="mainController" class="ru.antowka.controller.MainController">
              <property name="settingsList" value="site_title, site_description" />
       </bean>

       <!-- FileController -->
       <bean id="fileController" class="ru.antowka.controller.FileController">
              <property name="storagePath" value="${file.storagePath}" />
       </bean>

</beans>